@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Store.ViewModels.LoginViewModel

<form asp-action="Login" method="post" class="form-container">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Email">Электронная почта</label>
        <input asp-for="Email" class="form-custom form-control rounded-pill @(ViewData.ModelState["Email"]?.Errors.Count > 0 ? "is-invalid" : "")" placeholder="Введите вашу почту" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password">Пароль</label>
        <input asp-for="Password" class="form-custom form-control rounded-pill @(ViewData.ModelState["Password"]?.Errors.Count > 0 ? "is-invalid" : "")" placeholder="Введите ваш пароль" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="form-check">
            <input asp-for="RememberMe" class="form-check-input rounded-pill" />
            <label asp-for="RememberMe" class="form-check-label">Запомнить меня</label>
        </div>
    </div>
    <button type="submit" class="btn btn-custom btn-block">Войти</button>

    <p class="text-center">
        Нет учетной записи? <a class="accaunt p-2" href="/Account/Register">Зарегистрируйтесь здесь</a>
    </p>
</form>
